<div class="modal fade" id="searchFilialModal" tabindex="-1" aria-labelledby="searchFilialModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content" style="height: 600px; max-height: 90vh;">
      <div class="modal-header">
        <h5 class="modal-title" id="searchFilialModalLabel">Selecione uma filial</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fechar"></button>
      </div>
      <div class="modal-body" style="overflow-y: auto;">
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead>
                    <tr>
                        <th colspan="3">
                            <div class="d-flex justify-content-center mt-1 mb-2">
                                <div class="position-relative" style="max-width: 300px; width: 100%;">
                                    <input type="text" id="searchFilialInput"
                                          class="form-control pe-5"
                                          placeholder="Digite para buscar uma filial">
                                          
                                    <button id="searchFilial"
                                            type="button" 
                                            class="p-0 border-0 bg-transparent position-absolute"
                                            style="top: 50%; right: 10px; transform: translateY(-50%);">
                                        <img src="~/assets/img/search-icon.svg" alt="Buscar" width="24" height="24">
                                    </button>
                                </div>
                            </div>
                        </th>
                    </tr>
                    <tr>
                        <th>Id</th>
                        <th>Filial</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody id="filialsList">
                </tbody>
            </table>
            <nav aria-label="Filial pagination">
              <ul id="filialButtonsPagination" class="pagination justify-content-center">
              </ul>
            </nav>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fechar</button>
      </div>
    </div>
  </div>
</div>
