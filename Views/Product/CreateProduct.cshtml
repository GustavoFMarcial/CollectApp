@model CollectApp.ViewModels.CreateProductViewModel
@{
    ViewData["Title"] = "Inserir produto";
}

<div class="container">
    <h1 class="mb-4">Insira um produto</h1>
    <form asp-controller="Product" asp-action="CreateProduct" method="post">
        <div asp-validation-summary="None"></div>
        <div class="form-group mt-4 col-4 position-relative">
            <label asp-for="Description"></label>
            <input asp-for="Description" class="form-control" autofocus>
            <span asp-validation-for="Description" class="text-danger position-absolute span-font-size"></span>
        </div>
        <div class="text-end mt-4 col-4">
            <a asp-controller="Product" asp-action="ListProducts"><button type="button" class="btn btn-secondary">Voltar</button></a>
            <button type="submit" class="btn btn-primary">Criar</button>
        </div>
    </form>
</div>

@await Html.PartialAsync("_ProductModalError", ViewBag.Message as string)

@section Scripts 
{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var showModal = '@ViewBag.ShowModal' === 'True';
            if (showModal) {
                var modalElement = document.getElementById('errorCreateProductModal');
                if (modalElement) {
                    var modal = new bootstrap.Modal(modalElement);
                    modal.show();
                }
            }
        });
    </script>
}