@model CollectApp.ViewModels.EditSupplierViewModel
@{
    ViewData["Title"] = "Editar fornecedor";
}

<div class="container">
    <h1 class="mb-4">Editar fornecedor</h1>
    <form asp-controller="Supplier" asp-action="EditSupplier" method="post">
        <div asp-validation-summary="ModelOnly"></div>
        <input asp-for="Id" type="hidden">
        <div class="form-group col-4 position-relative">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control">
            <span asp-validation-for="Name" class="text-danger position-absolute span-font-size"></span>
        </div>
        <div class="form-group mt-4 col-4 position-relative">
            <label asp-for="CNPJ"></label>
            <input asp-for="CNPJ" class="form-control">
            <span asp-validation-for="CNPJ" class="text-danger position-absolute span-font-size"></span>
        </div>
        <div class="form-group mt-4 col-4 position-relative">
            <label asp-for="Street"></label>
            <input asp-for="Street" class="form-control">
            <span asp-validation-for="Street" class="text-danger position-absolute span-font-size"></span>
        </div>
        <div class="form-group mt-4 col-4 position-relative">
            <label asp-for="Neighborhood"></label>
            <input asp-for="Neighborhood" class="form-control">
            <span asp-validation-for="Neighborhood" class="text-danger position-absolute span-font-size"></span>
        </div>
        <div class="form-group mt-4 col-4 position-relative">
            <label asp-for="Number"></label>
            <input asp-for="Number" class="form-control">
            <span asp-validation-for="Number" class="text-danger position-absolute span-font-size"></span>
        </div>
        <div class="form-group mt-4 col-4 position-relative">
            <label asp-for="City"></label>
            <input asp-for="City" class="form-control">
            <span asp-validation-for="City" class="text-danger position-absolute span-font-size"></span>
        </div>
        <div class="form-group mt-4 col-4 position-relative">
            <label asp-for="State"></label>
            <input asp-for="State" class="form-control">
            <span asp-validation-for="State" class="text-danger position-absolute span-font-size"></span>
        </div>
        <div class="form-group mt-4 col-4 position-relative">
            <label asp-for="ZipCode"></label>
            <input asp-for="ZipCode" class="form-control">
            <span asp-validation-for="ZipCode" class="text-danger position-absolute span-font-size"></span>
        </div>
        <div class="text-end mt-4 col-4">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </form>
</div>

@section Scripts 
{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}