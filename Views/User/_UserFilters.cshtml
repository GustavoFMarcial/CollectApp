@using CollectApp.ViewModels
@model UserFilterViewModel

<div class="card mb-4">
    <div class="card-header">
        <h6 class="mb-0">Filtros de Busca</h6>
    </div>
    <div class="card-body">
        <form method="get" asp-controller="Collect" asp-action="ListCollects">
            <div class="row g-2">
                <div class="col-md-1">
                    <label asp-for="Id" class="form-label small mb-1 ps-1">ID</label>
                    <input asp-for="Id" type="number" class="form-control form-control-sm" placeholder="ID">
                </div>

                <div class="col-auto">
                    <label asp-for="StartCreation" class="form-label small mb-1 ps-1">Criação Início</label>
                    <input asp-for="StartCreation" type="date" class="form-control form-control-sm"
                        style="width: 150px;">
                </div>

                <div class="col-auto">
                    <label asp-for="EndCreation" class="form-label small mb-1 ps-1">Criação Fim</label>
                    <input asp-for="EndCreation" type="date" class="form-control form-control-sm" style="width: 150px;">
                </div>

                <div class="col-md-2">
                    <label asp-for="FullName" class="form-label small mb-1 ps-1">Usuário</label>
                    <input asp-for="FullName" type="text" class="form-control form-control-sm" placeholder="Usuário">
                </div>

                <div class="col-md-2">
                    <label asp-for="Role" class="form-label small mb-1 ps-1">Cargo</label>
                    <input asp-for="Role" type="text" class="form-control form-control-sm" placeholder="Cargo">
                </div>
            <div class="row mt-2">
                <div class="col-12">
                    <button type="submit" class="btn btn-primary btn-sm">Filtrar</button>
                    <a href="@Url.Action("ListUsers", "User")" class="btn btn-secondary btn-sm">Limpar</a>
                </div>
            </div>
        </form>
    </div>
</div>