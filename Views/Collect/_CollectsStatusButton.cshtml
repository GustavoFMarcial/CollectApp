@model CollectApp.ViewModels.CollectChangeStatusViewModel 

<div class="d-flex justify-content-end gap-1">
    <form asp-controller="Collect" asp-action="ChangeCollectStatus" method="post">
        <input asp-for="Id" type="hidden" value="@Model.Id">
        <input asp-for="Status" type="hidden" value="collected">
        <button class="btn btn-primary">Coletado</button>
    </form>
    <form asp-controller="Collect" asp-action="" method="post">
        <input type="hidden">
        <button class="btn btn-primary">Editar</button>
    </form>
    <form asp-controller="Collect" asp-action="ChangeCollectStatus" method="post">
        <input asp-for="Id" type="hidden" value="@Model.Id">
        <input asp-for="Status" type="hidden" value="deleted">
        <button class="btn btn-primary">Deletado</button>
    </form>
</div>

@section Scripts 
{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}