@model CollectApp.ViewModels.CollectCreateViewModel
@{
    ViewData["Title"] = "Create collect";
}

<div class="container">
    <h1>Insert a collect</h1>
    <form method="post">
        <div class="form-group col-4">
            <label asp-for="Company"></label>
            <input asp-for="Company" type="text" class="form-control" placeholder="Empresa">
            <span asp-validation-for="Company" class="text-danger position-fixed span-font-size"></span>
        </div>
        <div class="form-group mt-4 col-4">
            <label asp-for="CollectAt"></label>
            <input asp-for="CollectAt" class="form-control">
            <span asp-validation-for="CollectAt" class="text-danger position-fixed span-font-size"></span>
        </div>
        <div class="text-end mt-4 col-4">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </form>
</div>

@section Scripts 
{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}