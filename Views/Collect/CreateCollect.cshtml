@model CollectApp.ViewModels.CollectCreateEditViewModel
@{
    ViewData["Title"] = "Inserir coleta";
}

<div class="container">
    <h1>Insira uma coleta</h1>
    <form asp-controller="Collect" asp-action="CreateCollect" method="post">
        <div asp-validation-summary="ModelOnly"></div>
        <div class="form-group col-4">
            <label asp-for="Company"></label>
            <input asp-for="Company" type="text" class="form-control" placeholder="Empresa">
            <span asp-validation-for="Company" class="text-danger position-fixed span-font-size"></span>
        </div>
        <div class="form-group mt-4 col-4">
            <label asp-for="CollectAt"></label>
            <input asp-for="CollectAt" class="form-control">
            <span asp-validation-for="CollectAt" class="text-danger position-fixed span-font-size"></span>
        </div>
        <div class="form-group mt-4 col-4">
            <label asp-for="Volume"></label>
            <input asp-for="Volume" class="form-control">
            <span asp-validation-for="Volume" class="text-danger position-fixed span-font-size"></span>
        </div>
        <div class="form-group mt-4 col-4">
            <label asp-for="Weigth"></label>
            <input asp-for="Weigth" class="form-control">
            <span asp-validation-for="Weigth" class="text-danger position-fixed span-font-size"></span>
        </div>
        <div class="form-group mt-4 col-4">
            <label asp-for="Filial"></label>
            <input asp-for="Filial" class="form-control">
            <span asp-validation-for="Filial" class="text-danger position-fixed span-font-size"></span>
        </div>
        <div class="text-end mt-4 col-4">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </form>
</div>

@section Scripts 
{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}